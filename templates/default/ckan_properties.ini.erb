## Logging configuration
[loggers]
keys = root, ckan, ckanext<% if node['datashades']['ckan_web']['sentryurl'].length > 0 -%>, sentry<% end -%>

[handlers]
keys = console<% if node['datashades']['ckan_web']['sentryurl'].length > 0 -%>, sentry<% end -%>

[formatters]
keys = generic

[logger_root]
level = WARNING
handlers = console<% if node['datashades']['ckan_web']['sentryurl'].length > 0 -%>, sentry<% end -%>

[logger_ckan]
level = INFO
handlers = console<% if node['datashades']['ckan_web']['sentryurl'].length > 0 -%>, sentry<% end -%>
qualname = ckan
propagate = 0

[logger_ckanext]
level = DEBUG
handlers = console<% if node['datashades']['ckan_web']['sentryurl'].length > 0 -%>, sentry<% end -%>
qualname = ckanext
propagate = 0

<% if node['datashades']['ckan_web']['sentryurl'].length > 0 -%>
[logger_sentry]
level = WARNING
handlers = console
qualname = sentry.errors
propagate = 0

[handler_sentry]
class = raven.handlers.logging.SentryHandler
args = ("<%= node['datashades']['ckan_web']['sentryurl'] %>",)
level = WARNING
formatter = generic
<% else -%>
#[logger_sentry]
#level = WARNING
#handlers = console
#qualname = sentry.errors
#propagate = 0

#[handler_sentry]
#class = raven.handlers.logging.SentryHandler
#args = ("<%= node['datashades']['ckan_web']['sentryurl'] %>",)
#level = WARNING
#formatter = generic
<% end -%>


[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s,%(msecs)03d %(levelname)-5.5s [%(name)s] %(message)s
datefmt = %H:%M:%S
