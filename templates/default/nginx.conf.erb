	# Live server NGINX Configuration
	#
	# NO CHANGES UNLESS MAINTENANCE IS SCHEDULED AND APPROVED
	#

    # Prevent header from spoofing
    #
    real_ip_header X-Forwarded-For;
    set_real_ip_from <%= node['datashades']['nfs']['cidr'] %>;

    server_names_hash_bucket_size 128;
    <% if node['datashades']['nginx']['ssl'] -%>
    server
    {
        listen 80;
        server_name  <%= @app_url %> www.<%= @app_url %>;
        return 301 https://$host$request_uri;
    }
    <% end -%>

    server
    {
        listen       <% if node['datashades']['nginx']['ssl'] -%> 443 ssl <% else %> 80 <%= node['datashades']['nginx']['default_server'] %><% end -%>;
        server_name  <%= @app_url %> www.<%= @app_url %>;
        root /var/www/sites/<%= node['datashades']['app_id'] %>/public; ## <-- Your only path reference.
        if ($http_x_forwarded_proto = 'http') {
            return 301 https://$host$request_uri;
        }

        <% if node['datashades']['nginx']['ssl'] -%>
        ssl_certificate     /etc/ssl/certs/wild.<%= node['datashades']['tld'] %>.crt;
        ssl_certificate_key /etc/ssl/certs/wild.<%= node['datashades']['tld'] %>.key;
        <% end -%>
	    error_log  /var/log/nginx/<%= node['datashades']['sitename'] %>/<%= @app_name %>_error.log;
	    access_log /var/log/nginx/<%= node['datashades']['sitename'] %>/<%= @app_name %>_access.log  main;

        # Enable compression, this will help if you have for instance advaggâ€Ž module
        # by serving Gzip versions of the files.
		gzip  on;
		gzip_vary on;
		gzip_min_length 10240;
		gzip_proxied expired no-cache no-store private auth;
		gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml;
		gzip_disable "MSIE [1-6]\.";

		server_tokens off;
		client_max_body_size <%= node['datashades']['nginx']['maxdl'] %>;

        location ~ ^<%= node['datashades']['ckan_web']['endpoint'] %> {
            # API calls with significant side effects should not respect auth_tkt cookies, they should require the API key.
            location ~ [/]api[/](?!([0-9][/])?(storage|action[/](package_resource_reorder|resource_view_reorder|user_activity_list_html|[-_a-zA-Z0-9]*follow|datastore_search)|util[/][a-z]+[/](format_)?autocomplete)) {
                proxy_set_header Cookie "";
                add_header Strict-Transport-Security "max-age=31536000" always;

                proxy_pass http://localhost:8080;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            }

            # Rewrite to remove locale
            rewrite (?i)^/(a[fmrsz]|b[egnos]|c[asy]|d[aev]|e[lnstu]|f[aior]|g[dlnu]|h[eiruy]|i[dst]|ja|k[akmnos]|l[aotv]|m[iklnrsty]|n[elo]|or|p[alt]|r[mou]|s[abdikloqrvw]|sr_Latn|t[aeghklnrst]|u[krz]|vi|xh|yi|z[hu])(_[A-Z][A-Z])?(/.*) $3 permanent;

            # redirect 'group' URLs to organisations
            rewrite ^/group/(aboriginal-and-torres-strait-islander-and-multicultural-affairs|agriculture-fisheries-and-forestry|communities-child-safety-and-disability-services|crime-and-misconduct-commission-queensland|education-training-and-employment|energy-and-water-supply|environment-and-heritage-protection|housing-and-public-works|justice-and-attorney-general|local-government-community-recovery-and-resilience|national-parks-recreation-sport-and-racing|natural-resources-and-mines|police|premier-and-cabinet|public-safety-business-agency|queensland-fire-and-emergency-services|queensland-health|science-information-technology-innovation-and-the-arts|state-development-infrastructure-and-planning|tourism-major-events-small-business-and-the-commonwealth-games|transport-and-main-roads|treasury-and-trade) /organization/$1 permanent;

            # MoG changes
            rewrite ^/organization/aboriginal-and-torres-strait-islander-and-multicultural-affairs /organization/aboriginal-and-torres-strait-islander-partnerships permanent;
            rewrite ^/organization/agriculture-fisheries-and-forestry /organization/agriculture-and-fisheries permanent;
            rewrite ^/organization/education-and-employment /organization/education-and-training permanent;
            rewrite ^/organization/local-government-community-recovery-and-resilience /organization/infrastructure-local-government-and-planning permanent;
            rewrite ^/organization/national-parks-recreation-sport-and-racing /organization/national-parks-sport-and-racing permanent;
            rewrite ^/organization/treasury-and-trade /organization/treasury permanent;
            rewrite ^/organization/science-information-technology-innovation-and-the-arts /organization/science-information-technology-and-innovation permanent;
            rewrite ^/organization/state-development-infrastructure-and-planning /organization/state-development permanent;

            # Require site to be served over HTTPS
            add_header Strict-Transport-Security "max-age=31536000" always;

            # Ensure cookies have security flags set
            proxy_cookie_path / "/; Secure; HttpOnly";

            proxy_pass http://localhost:8080;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        location = /favicon.ico
        {
                log_not_found off;
                access_log off;
        }

        # Very rarely should these ever be accessed outside of your lan
        location ~* \.log$
        {
                allow <%= node['datashades']['nfs']['cidr'] %>;
                deny all;
        }

        location ~ \..*/.*\.php$
        {
                return 403;
        }

        # This is for D7 and D8
        location ~ ^/sites/.*/files/styles/
        {
            try_files $uri @rewrite;
        }

        # Block access to "hidden" files and directories whose names begin with a
        # period. This includes directories used by version control systems such
        # as Subversion or Git to store control files.
        location ~ (^|/)\.
        {
                return 403;
        }

        location /
        {
				client_max_body_size <%= node['datashades']['nginx']['maxdl'] %>;
                # This is cool because no php is touched for static content
                try_files $uri @rewrite;
        }

        location @rewrite
        {
                # Clean URLs are handled in drupal_environment_initialize().
                rewrite ^ /index.php;
        }

        location ~* \.(js|css|png|jpg|jpeg|gif|ico)$
        {
                expires max;
                log_not_found off;
        }

